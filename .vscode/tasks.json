{ "version": "2.0.0",
  "tasks": [
    {
      "label": "build (clang)",
      "type": "shell",
      "command": "clang",
      "args": [
        "-g",
        "-Wall", "-Wextra",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": "build",
      "problemMatcher": "$gcc"
    }
  ]
}